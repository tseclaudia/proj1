<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<p>Pokemon:
  <ul>
    <% @pokemons.each do |pokemon| %>
      <% pokemon.trainer == @trainer %>
        <li> <%= pokemon.name %>
          <ul>
          <li> Level: <%= pokemon.level %> </li>
          <li> Health: <%= pokemon.health %> </li>
          </ul>
        </li>
          <%= button_to "Damage", damage_pokemon_path(id: pokemon.id), :class => "button medium", :method => :patch %>
  </ul>
  <% end %>
    <% if @trainer == current_trainer %> 
    <%= button_to "Create New Pokemon", new_pokemon_path, :method => "get" %>
  <% end %>
</p>
